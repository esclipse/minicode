.section{
  background: #f5f5f5;
  padding: 20rpx 10rpx ;
  display: flex;
  justify-content: space-around;
}

.sectionicon{
  height: 100rpx;
  width: 100rpx;
  margin-bottom: 10rpx;
}

.icontext{
  color: #63c2de;
  font-weight: 700;
}

.zixun::after{
  border: none;
}

.zixun{
  background-color: #f5f5f5;
  color: #63c2de;
  font-weight:700;
  white-space: nowrap;
}

.iconimg{
  height: 100%;
  width: 100%;
}

.iconwrap{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.h2{
  height: 100rpx;
  /* line-height: 100rpx; */
  font-size: 50rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #63c2de;
  margin-bottom: 30rpx;
}
.h2::before{
  content: '';
  width: 15rpx;
  background: #63c2de;
  display: inline-block;
  height: 50rpx;
  margin-right: 15rpx;
  border-radius: 5rpx;
}
.componey{
  padding: 20rpx;
  color: #63c2de;
  background: #f0f3f5;
}

.compontyitem{
  height: 250rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  margin-bottom: 30rpx;
}

.compontyitem .img{
  width: 330rpx;
  height: 250rpx;
  /* background: yellow; */
}

.compontyitem .detail{
  flex-grow: 1;
  /* background: pink; */
}

.img .imgs{
  height: 100%;
  width: 100%;
}

.detail{
  color: #909090;
  padding: 15rpx;
}

.topic{
  color: #000;
  font-weight: 700;
  margin-right: 10rpx;
}