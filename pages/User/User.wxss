/* pages/User/User.wxss */
.page{
  /* height: 100vh; */
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.useritem{
  height: 10vh;
  display: flex;
  align-items:  center;
  background: #fff;
  padding-left: 15rpx;
}

.iconimgwrap{
   height: 50rpx;
   width: 50rpx;
   margin-right: 20rpx;
}

.iconimg{
  width: 100%;
  height: 100%;
}



.usertext{
  /* border-top: 1rpx solid #b2b2b2; */
  /* color: #b2b2b2; */
  flex-grow: 1;
  height: 10vh;
  display: flex;
  align-items: center;
  background: #fff;
  overflow: hidden;
}

.usertext button{
  background: #fff;
  color: #b2b2b2;
  text-align: left;
  height: 9vh;
  font-size: 38rpx;
  line-height: 9vh;
  padding-left: 0;
  /* background: pink; */
  width: 100%;
}

.divider{
  margin-bottom: 10rpx;
}



.usertext button::after{
  border: none;
}

.avatar {
  height: 300rpx;
  background: #fff;
  position: relative;
  padding-bottom: 40rpx;
}

.navigator{
  padding-top: 30rpx;
  background: #fff;
}

.bguser{
  height: 100%;
  width: 100%;
}

.avawrap{
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 100rpx;
  position: absolute;
  bottom: 0;
  left: 100rpx;
}

.username{
  margin-top: 5rpx;
}

.avatarimg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.arrow{
  border-top: 4.8rpx solid #000;
  border-right: 4.8rpx solid #000;  
  width: 25rpx;
  height: 25rpx;  
  transform: rotate(45deg); 
  margin-right: 15rpx;
}